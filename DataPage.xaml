<Page
    x:Class="WuiFET.DataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WuiFET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TeachingTip
            x:Name="tt"
            Title="{x:Bind str1,Mode=OneWay}"
            Subtitle="{x:Bind str2,Mode=OneWay}">
                <TeachingTip.IconSource>
                    <SymbolIconSource Symbol="Refresh" />
                </TeachingTip.IconSource>
            </TeachingTip>
        
        <!-- Content Dialog Add Assignment -->
        <ContentDialog x:Name="AddAssignmentCD" IsPrimaryButtonEnabled="true" PrimaryButtonText="{x:Bind txt(4),Mode=OneWay}" SecondaryButtonText="{x:Bind txt(5),Mode=OneWay}"  IsSecondaryButtonEnabled="True" PrimaryButtonStyle="{StaticResource AccentButtonStyle}"  SecondaryButtonStyle="{StaticResource ErrorButtonStyle}">            <StackPanel Orientation="Vertical">                <TextBlock Text="{x:Bind str1,Mode=OneWay}" Margin="0,10,0,10"/>                <NumberBox Value="{x:Bind int1,Mode=TwoWay}" Margin="0,10,0,10"/>                <TextBlock Text="{x:Bind str2,Mode=OneWay}" Margin="0,10,0,10"/>                <NumberBox Value="{x:Bind int2,Mode=TwoWay}" Margin="0,10,0,10"/>            </StackPanel>        </ContentDialog>


        <InfoBar x:Name="infoBar" Grid.Row="0" IsOpen="True" Message="" Severity="Success"  IsClosable="False">
            <Grid VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Bind txt(1);}" Margin="10,0,0,0" Grid.Column="0" VerticalAlignment="Center" />
                <TextBlock Text="{x:Bind Loaded_File,Mode=OneWay}" Margin="10,0,0,0" Grid.Column="1" VerticalAlignment="Center"/>
            </Grid>
        </InfoBar>

        <Grid  Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <SelectorBar x:Name="SelectorBar1" Grid.Column="0" SelectionChanged="S_Change">
                <SelectorBarItem x:Name="sb1_basic" Text="{x:Bind txt(23);}" IsSelected="True" >
                    <SelectorBarItem.KeyboardAccelerators>
                    </SelectorBarItem.KeyboardAccelerators>
                </SelectorBarItem>
                <SelectorBarItem x:Name="sb1_buildings"  Text="{x:Bind txt(53);}" />
                <SelectorBarItem x:Name="sb1_teachers"  Text="{x:Bind txt(24);}" />
                <SelectorBarItem x:Name="sb1_subjects"  Text="{x:Bind txt(26);}" />
                <SelectorBarItem x:Name="sb1_classes" Text="{x:Bind txt(55);}" />
                <SelectorBarItem x:Name="sb1_students" Text="{x:Bind txt(27);}" />
                <SelectorBarItem x:Name="sb1_parents" Text="{x:Bind txt(149);}" />
                <SelectorBarItem x:Name="sb1_assignments"  Text="{x:Bind txt(87);}" />
                <SelectorBarItem x:Name="sb1_tags"  Text="{x:Bind txt(29);}" />
                <SelectorBarItem x:Name="sb1_activities"  Text="{x:Bind txt(25);}" />
                <!--            <SelectorBarItem  Text="{x:Bind txt(28);}" /> -->
            </SelectorBar>


            <CheckBox Content="{x:Bind txt(113)}" Margin="15,0,0,0" Grid.Column="1" HorizontalAlignment="Right" Click="OnReadOnly" x:Name="CheckReadOnly"  />
        </Grid>
        
        <!-- Basic Data -->
        <Grid Grid.Row="3" x:Name="Data_Basic" Visibility="{x:Bind DataVisibleWhat(0);,Mode=Oneway}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <InfoBar Grid.Row="0" Grid.ColumnSpan="2" IsOpen="True" Severity="Warning"  IsClosable="True" VerticalAlignment="Top" Title="{x:Bind txt(128);}"/>

            <TextBlock Margin="5" Grid.Column="0" Grid.Row="1" Text="{x:Bind txt(56);}" VerticalAlignment="Center"></TextBlock>
            <TextBox VerticalAlignment="Center" Margin="5" Grid.Column="1" Grid.Row="1" Text="{x:Bind Institution_Name,Mode=TwoWay}" IsReadOnly="{x:Bind rdo(),Mode=OneWay}" ></TextBox>

            <TextBlock Margin="5" Grid.Column="0" Grid.Row="2" Text="{x:Bind txt(57);}" VerticalAlignment="Center"></TextBlock>
            <TextBox VerticalAlignment="Center" Margin="5" Grid.Column="1" Grid.Row="2" Text="{x:Bind Days_Work,Mode=TwoWay}" IsReadOnly="{x:Bind rdo(),Mode=OneWay}" ></TextBox>

            <TextBlock Margin="5" Grid.Column="0" Grid.Row="3" Text="{x:Bind txt(44);}" VerticalAlignment="Center"></TextBlock>
            <TextBox VerticalAlignment="Center" Margin="5" Grid.Column="1" Grid.Row="3" Text="{x:Bind Hours_Work,Mode=TwoWay}" IsReadOnly="{x:Bind rdo(),Mode=OneWay}" ></TextBox>

            <TextBlock Margin="5" Grid.Column="0" Grid.Row="4" Text="{x:Bind txt(158);}" VerticalAlignment="Center"></TextBlock>
            <ComboBox x:Name="ComboMode" Margin="5" Grid.Column="1" Grid.Row="4"  SelectedIndex="{x:Bind SelectedMode,Mode=TwoWay}">
                <x:String>Default</x:String>
                <x:String>Mornings-Afternoons</x:String>
                <x:String>Block planning</x:String>
                <x:String>Terms</x:String>
            </ComboBox>

        </Grid>
        
        <!-- Building Data -->
        <Grid Grid.Row="3" x:Name="Data_Buildings" Visibility="{x:Bind DataVisibleWhat(2);,Mode=Oneway}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="{x:Bind Rooms_VV1,Mode=OneWay}"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{x:Bind Buildings_VV1,Mode=OneWay}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <InfoBar Grid.Row="0" Grid.ColumnSpan="3" IsOpen="True" Severity="Warning"  IsClosable="True" VerticalAlignment="Top" Title="{x:Bind txt(129);}" />

            <InfoBar Visibility="Visible" Grid.Row="1" IsOpen="True" Severity="Informational"  IsClosable="False" VerticalAlignment="Top">
                <Grid VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{x:Bind txt(49);}" Margin="4" Grid.Column="0" VerticalAlignment="Center"/>
                    <DropDownButton Margin="4" Grid.Column="1" VerticalAlignment="Center">
                        <IconSourceElement>
                            <FontIconSource  Glyph="&#xE700;"  FontSize="16"/>
                        </IconSourceElement>
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem  Click="OnBuilding_Add" Text="{x:Bind txt(41);}"/>
                                <MenuFlyoutItem  Click="OnBuildings_Import" Text="{x:Bind txt(106);}" ToolTipService.ToolTip="{x:Bind txt(107);}"/>
                                <MenuFlyoutItem  Click="OnBuildings_Sort" Text="{x:Bind txt(70);}"/>
                                <MenuFlyoutSubItem Text="{x:Bind txt(80);}">
                                    <MenuFlyoutItem Click="OnBuildings_FilterType0" Text="{x:Bind txt(42);}" />
                                    <MenuFlyoutItem Click="OnBuildings_FilterType1" Text="{x:Bind txt(52);}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                    <AutoSuggestBox x:Name="fb1" QueryIcon="Find" PlaceholderText="{x:Bind txt(130)}" Margin="4" Grid.Column="2" VerticalAlignment="Center" MinWidth="150" TextChanged="OnBuildings_Filter" />
                </Grid>
            </InfoBar>

            <ListView x:Name="BuildingsList" Grid.Row="2" Grid.Column="0" ItemsSource="{x:Bind Buildings_List,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" SelectionChanged="BuildingChanged" SelectionMode="{x:Bind lvsm(1),Mode=OneWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Item">
                        <StackPanel Orientation="Horizontal" Margin="10" >
                            <SymbolIcon Symbol="Home" />
                            <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                            <TextBlock.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="{x:Bind txt(46);}" Click="OnBuildingSelected_Delete" />
                                    </MenuFlyout>
                                </TextBlock.ContextFlyout>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <local:Resizer Grid.Row="3" Margin="10" 
                 Height="1"
                 Minimum="-1000"
                 Maximum="1000"
                 Orientation="Horizontal"
                 Value="{x:Bind Rooms_V1,Mode=TwoWay}"/>
            
            <InfoBar Grid.Row="4" IsOpen="True" Severity="Informational"  IsClosable="False" VerticalAlignment="Top" Visibility="{x:Bind PropertyVisibleWhat(5);,Mode=Oneway}">
                <Grid VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{x:Bind txt(51);}" Margin="4" Grid.Column="0" VerticalAlignment="Center"/>
                    <DropDownButton Margin="4" Grid.Column="1" VerticalAlignment="Center">
                        <IconSourceElement>
                            <FontIconSource  Glyph="&#xE700;"  FontSize="16"/>
                        </IconSourceElement>
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem  Click="OnRoom_Add" Text="{x:Bind txt(41);}"/>
                                <MenuFlyoutItem  Click="OnRooms_Import" Text="{x:Bind txt(106);}" ToolTipService.ToolTip="{x:Bind txt(109);}"/>
                                <MenuFlyoutItem  Click="OnRooms_Sort" Text="{x:Bind txt(70);}"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                    <AutoSuggestBox x:Name="fb2" QueryIcon="Find" PlaceholderText="{x:Bind txt(130)}" Margin="4" Grid.Column="2" VerticalAlignment="Center" MinWidth="150" TextChanged="OnRooms_Filter" />
                </Grid>
            </InfoBar>

            <ListView Visibility="{x:Bind PropertyVisibleWhat(5);,Mode=Oneway}" x:Name="RoomsList" Grid.Row="5" Grid.Column="0" ItemsSource="{x:Bind Rooms_List,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" SelectionChanged="RoomChanged" SelectionMode="{x:Bind lvsm(2),Mode=OneWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Item">
                        <StackPanel Orientation="Horizontal" Margin="10" >
                                <SymbolIcon Symbol="Page2" />
                                <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                                <TextBlock.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="{x:Bind txt(46);}" Click="OnRoomSelected_Delete" />
                                    </MenuFlyout>
                                </TextBlock.ContextFlyout>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <local:Resizer Grid.Column="1" Margin="10" Grid.Row="1" Grid.RowSpan="5"
                    Width="1"
                    Minimum="-1000"
                    Maximum="1000"
                    Orientation="Vertical"
                    Value="{x:Bind Buildings_V1,Mode=TwoWay}"/>

            <InfoBar Grid.Row="1" Grid.Column="2" Message="{x:Bind txt(40);}" Visibility="{x:Bind PropertyVisibleWhat(5);,Mode=Oneway}" Severity="Informational"  IsClosable="False" IsOpen="True">
            </InfoBar>

            <Grid Grid.Row="2" Grid.Column="2" Grid.RowSpan="4" Visibility="{x:Bind PropertyVisibleWhat(2);,Mode=Oneway}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" Text="{x:Bind txt(160);}" VerticalAlignment="Center"></TextBlock>
                <TextBox IsReadOnly="True"  Margin="5" Grid.Column="1" Grid.Row="0" Text="{x:Bind Building_Name,Mode=OneWay}"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="1" Text="{x:Bind txt(161);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="1" Text="{x:Bind Building_LongName,Mode=TwoWay}" IsReadOnly="{x:Bind rdo(),Mode=OneWay}"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="2" Text="{x:Bind txt(48);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="2" Text="{x:Bind Building_Code,Mode=TwoWay}" IsReadOnly="{x:Bind rdo(),Mode=OneWay}"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="3" Text="{x:Bind txt(207);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="3" Text="{x:Bind Building_Coordinates,Mode=TwoWay}" IsReadOnly="{x:Bind rdo(),Mode=OneWay}"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="4" Text="{x:Bind txt(43);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="4" Text="{x:Bind Building_Comment,Mode=TwoWay}" IsReadOnly="{x:Bind rdo(),Mode=OneWay}"></TextBox>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="2" Grid.RowSpan="4" Visibility="{x:Bind PropertyVisibleWhat(4);,Mode=Oneway}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" Text="{x:Bind txt(160);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" IsReadOnly="True"  Grid.Column="1" Grid.Row="0" Text="{x:Bind Room_Name,Mode=OneWay}"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="1" Text="{x:Bind txt(161);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="1" Text="{x:Bind Room_LongName,Mode=TwoWay}"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="2" Text="{x:Bind txt(48);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="2" Text="{x:Bind Room_Code,Mode=TwoWay}"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="3" Text="{x:Bind txt(54);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="3" Text="{x:Bind Room_Capacity,Mode=TwoWay}"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="4" Text="{x:Bind txt(245);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="4" Text="{x:Bind Room_Features,Mode=TwoWay}"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="5" Text="{x:Bind txt(43);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="5" Text="{x:Bind Room_Comment,Mode=TwoWay}"></TextBox>
            </Grid>
            
        </Grid>

        <!-- Teacher Data -->
        <Grid Grid.Row="3" x:Name="Data_Teachers" Visibility="{x:Bind DataVisibleWhat(1);,Mode=Oneway}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{x:Bind Teachers_VV1,Mode=OneWay}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <InfoBar Grid.Row="0" Grid.ColumnSpan="3" IsOpen="True" Severity="Warning"  IsClosable="True" VerticalAlignment="Top" Title="{x:Bind txt(131);}" />

            <InfoBar Grid.Row="1" Grid.Column="0"  IsOpen="True" Severity="Informational"  IsClosable="False" VerticalAlignment="Top">
                <Grid VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{x:Bind txt(24);}" Margin="4" Grid.Column="0" VerticalAlignment="Center"/>
                    <DropDownButton Margin="4" Grid.Column="1" VerticalAlignment="Center">
                        <IconSourceElement>
                            <FontIconSource  Glyph="&#xE700;"  FontSize="16"/>
                        </IconSourceElement>
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem  Click="OnTeacher_Add" Text="{x:Bind txt(41);}"/>
                                <MenuFlyoutItem  Click="OnTeachers_Import" Text="{x:Bind txt(106);}" ToolTipService.ToolTip="{x:Bind txt(132);}"/>
                                <MenuFlyoutItem  Click="OnTeachers_Sort" Text="{x:Bind txt(70);}"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                    <AutoSuggestBox x:Name="fb3" QueryIcon="Find" PlaceholderText="{x:Bind txt(130)}"  Margin="4" Grid.Column="2" VerticalAlignment="Center" MinWidth="150" TextChanged="OnTeachers_Filter" />
                </Grid>
            </InfoBar>


            <ListView x:Name="TeachersList" Grid.Row="2" Grid.Column="0" ItemsSource="{x:Bind Teachers_List,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" SelectionChanged="TeacherChanged" SelectionMode="{x:Bind lvsm(3),Mode=OneWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Item">
                        <StackPanel Orientation="Horizontal" Margin="10" >
                            <SymbolIcon Symbol="Page2" />
                            <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                                <TextBlock.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="{x:Bind txt(46);}" Click="OnTeacherSelected_Delete"/>
                                    </MenuFlyout>
                                </TextBlock.ContextFlyout>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <local:Resizer Grid.Column="1" Margin="10" Grid.Row="1" Grid.RowSpan="2"
                            Width="1"
	                        Minimum="-1000"
	                        Maximum="1000"
	                        Orientation="Vertical"
	                        Value="{x:Bind Teachers_V1,Mode=TwoWay}"/>



            <InfoBar Grid.Row="1" Grid.Column="2" Visibility="{x:Bind PropertyVisibleWhat(1);,Mode=Oneway}" Message="{x:Bind txt(40);}" Severity="Informational"  IsClosable="False" IsOpen="True">
            </InfoBar>

            <Grid Grid.Row="2" Grid.Column="2" Visibility="{x:Bind PropertyVisibleWhat(1);,Mode=Oneway}" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" Text="{x:Bind txt(160);}" VerticalAlignment="Center"></TextBlock>
                <TextBox IsReadOnly="True" Margin="5" Grid.Column="1" Grid.Row="0" Text="{x:Bind Teacher_Name,Mode=OneWay}"  ></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="1" Text="{x:Bind txt(161);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="1" Text="{x:Bind Teacher_LongName,Mode=TwoWay}" IsReadOnly="{x:Bind rdo(),Mode=OneWay}"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="2" Text="{x:Bind txt(44);}" VerticalAlignment="Center"></TextBlock>
                <NumberBox Margin="5" Grid.Column="1" Grid.Row="2" Text="{x:Bind Teacher_NumHours,Mode=TwoWay}" ></NumberBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="3" Text="{x:Bind txt(43);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="3" Text="{x:Bind Teacher_Comment,Mode=TwoWay}" IsReadOnly="{x:Bind rdo(),Mode=OneWay}" ></TextBox>
            </Grid>



        </Grid>

        <!-- Subject Data -->
        <Grid Grid.Row="3" x:Name="Data_Subjects" Visibility="{x:Bind DataVisibleWhat(3);,Mode=Oneway}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{x:Bind Subjects_VV1,Mode=OneWay}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <InfoBar Grid.Row="0" Grid.ColumnSpan="3" IsOpen="True" Severity="Warning"  IsClosable="True" VerticalAlignment="Top" Title="{x:Bind txt(133);}" />

            <InfoBar Grid.Row="1" IsOpen="True" Severity="Informational"  IsClosable="False" VerticalAlignment="Top">
                <Grid VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{x:Bind txt(26);}" Margin="4" Grid.Column="0" VerticalAlignment="Center"/>
                    <DropDownButton Margin="4" Grid.Column="1" VerticalAlignment="Center">
                        <IconSourceElement>
                            <FontIconSource  Glyph="&#xE700;"  FontSize="16"/>
                        </IconSourceElement>
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem  Click="OnSubject_Add" Text="{x:Bind txt(41);}"/>
                                <MenuFlyoutItem  Click="OnSubjects_Import" Text="{x:Bind txt(106);}" ToolTipService.ToolTip="{x:Bind txt(134);}"/>
                                <MenuFlyoutItem  Click="OnSubjects_Sort" Text="{x:Bind txt(70);}"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                    <AutoSuggestBox x:Name="fb4" QueryIcon="Find" PlaceholderText="{x:Bind txt(130)}"  Margin="4" Grid.Column="2" VerticalAlignment="Center" MinWidth="150" TextChanged="OnSubjects_Filter" />
                </Grid>
            </InfoBar>


            <ListView x:Name="SubjectsList" Grid.Row="2" Grid.Column="0" ItemsSource="{x:Bind Subjects_List,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" SelectionChanged="SubjectChanged" SelectionMode="{x:Bind lvsm(4),Mode=OneWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Item">
                        <StackPanel Orientation="Horizontal" Margin="10" >
                            <SymbolIcon Symbol="Page2" />
                            <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                                <TextBlock.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="{x:Bind txt(46);}" Click="OnSubjectSelected_Delete"/>
                                    </MenuFlyout>
                                </TextBlock.ContextFlyout>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <local:Resizer Grid.Column="1" Margin="10" Grid.RowSpan="2" Grid.Row="1"
                    Width="1"
                    Minimum="-1000"
                    Maximum="1000"
                    Orientation="Vertical"
                    Value="{x:Bind Subjects_V1,Mode=TwoWay}"/>



            <InfoBar Grid.Row="1" Grid.Column="2" Visibility="{x:Bind PropertyVisibleWhat(3);,Mode=Oneway}" Message="{x:Bind txt(40);}" Severity="Informational"  IsClosable="False" IsOpen="True">
            </InfoBar>


            <Grid Grid.Row="2" Grid.Column="2" Visibility="{x:Bind PropertyVisibleWhat(3);,Mode=Oneway}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" Text="{x:Bind txt(160);}" VerticalAlignment="Center"></TextBlock>
                <TextBox Margin="5" Grid.Column="1" Grid.Row="0" Text="{x:Bind Subject_Name,Mode=OneWay}" IsReadOnly="true"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="1" Text="{x:Bind txt(161);}" VerticalAlignment="Center"></TextBlock>

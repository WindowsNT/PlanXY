<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WuiFET.SpaceConstraintsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WuiFET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <InfoBar x:Name="infoBar" Grid.Row="0" IsOpen="True" Message="" Severity="Warning"  IsClosable="False">
            <Grid VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Bind txt(20);}" Margin="10,0,0,0" Grid.Column="0" VerticalAlignment="Center"/>
            </Grid>
        </InfoBar>


        <MenuBar HorizontalAlignment="Left" x:Name="menu" Grid.Row="1">
<!--            <MenuBarItem Title="{x:Bind txt(90)}" >
                <MenuFlyoutItem Text="{x:Bind txt(91)}" Click="TS_TimeTable_BasicCompulsoryTime"/>
            </MenuBarItem>-->
            <MenuBarItem Title="{x:Bind txt(31)}" >
<!--                <MenuFlyoutItem Text="{x:Bind txt(86)}" Click="TS_Teacher_HomeRoom"/>
                <MenuFlyoutSeparator/>
                -->
                <MenuFlyoutSubItem Text="{x:Bind txt(100);}">
                    <MenuFlyoutItem Text="{x:Bind txt(139)}" Click="TS_Teacher_MaxRoomChangesDay"/>
                    <MenuFlyoutItem Text="{x:Bind txt(140)}" Click="TS_Teacher_MaxRoomChangesDayInterval"/>
                    <MenuFlyoutItem Text="{x:Bind txt(143)}" Click="TS_Teacher_MaxBuildingChangesDay"/>
                    <MenuFlyoutItem Text="{x:Bind txt(144)}" Click="TS_Teacher_MaxBuildingChangesDayInterval"/>
                </MenuFlyoutSubItem>
                <MenuFlyoutSubItem Text="{x:Bind txt(101);}">
                    <MenuFlyoutItem Text="{x:Bind txt(139)}" Click="TS_Teacher_MaxRoomChangesWeek"/>
                    <MenuFlyoutItem Text="{x:Bind txt(143)}" Click="TS_Teacher_MaxBuildingChangesWeek"/>
                </MenuFlyoutSubItem>
            </MenuBarItem>
            <MenuBarItem Title="{x:Bind txt(24)}" >
                <MenuFlyoutSubItem Text="{x:Bind txt(100);}">
                    <MenuFlyoutItem Text="{x:Bind txt(139)}" Click="TS_Teachers_MaxRoomChangesDay"/>
                </MenuFlyoutSubItem>
                <MenuFlyoutSubItem Text="{x:Bind txt(101);}">
                    <MenuFlyoutItem Text="{x:Bind txt(139)}" Click="TS_Teachers_MaxRoomChangesWeek"/>
                </MenuFlyoutSubItem>
            </MenuBarItem>
            <MenuBarItem Title="{x:Bind txt(33)}" >
                    <MenuFlyoutItem Text="{x:Bind txt(146)}" Click="TS_Subject_PreferredRooms"/>
            </MenuBarItem>

            <!--<MenuBarItem Title="{x:Bind txt(24)}" >
            </MenuBarItem>-->
        </MenuBar>



        <!-- Teacher -->
        <Grid Visibility="{x:Bind WhatX(1);,Mode=OneWay}" x:Name="TC_SingleTeacher" Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{x:Bind Resizer_VV1,Mode=OneWay}" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <ListView Visibility="{x:Bind WhatFX(1);,Mode=OneWay}" x:Name="Teachers_ListView" Grid.Row="0" Grid.Column="0" ItemsSource="{x:Bind Teachers_List,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" SelectionChanged="TeacherChanged" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Item">
                        <StackPanel Orientation="Horizontal" Margin="10" >
                            <SymbolIcon Symbol="Page2" />
                            <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <local:Resizer Grid.Column="1" Margin="10" Grid.RowSpan="2"  Width="1" Minimum="-1000"   Maximum="1000" Orientation="Vertical"   Value="{x:Bind Resizer_V1,Mode=TwoWay}"/>

            <!-- Teacher HomeRoom -->
            <Grid Grid.Column="2" Margin="5" Grid.Row="0" Visibility="{x:Bind WhatY(1);,Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Column="2" Margin="5" Grid.Row="0" Visibility="{x:Bind WhatY(1);,Mode=OneWay}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <InfoBar Grid.Row="0" IsOpen="True" Message="{x:Bind txt(86)}" Severity="Warning"  IsClosable="False">
                    </InfoBar>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <DropDownButton x:Name="dd1" Content="{x:Bind gr1_n1,Mode=OneWay}" Click="dd1Click" Grid.Column="0"  Margin="5" />
                        <TextBlock Grid.Column="1" Margin="5" VerticalAlignment="Center" Text="{x:Bind txt(84)}" />
                        <NumberBox x:Name="nb1" Grid.Column="2" HorizontalAlignment="Stretch" Margin="5" PlaceholderText="{x:Bind txt(84)}" Value="{x:Bind gr1_p,Mode=TwoWay}" Minimum="0" Maximum="100" SpinButtonPlacementMode="Inline" />
                    </Grid>
                    <ListView x:Name="gr1_rooms" Grid.Row="2" Grid.Column="0" ItemsSource="{x:Bind gr1_rl,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch"  SelectionMode="Single" ContainerContentChanging="gr1_changing" SelectionChanged="gr1_selectionchanged">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:Item">
                                <StackPanel Orientation="Horizontal" Margin="10" >
                                    <SymbolIcon Symbol="Page2" />
                                    <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

            </Grid>

            <!-- Teacher Generic -->
            <Grid Grid.Column="2" Margin="5" Grid.Row="0" Visibility="{x:Bind WhatY(2);,Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Column="2" Margin="5" Grid.Row="0" Visibility="{x:Bind WhatY(2);,Mode=OneWay}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <InfoBar Grid.Row="0" IsOpen="True" Message="{x:Bind zz21_n2,Mode=OneWay}" Severity="Warning"  IsClosable="False">
                    </InfoBar>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" IsChecked="{x:Bind zz21_A,Mode=TwoWay}" Content="{x:Bind txt(95)}"></CheckBox>
                        <DropDownButton Visibility="{x:Bind zz21_HasM,Mode=OneWay}" x:Name="zz21_dd" Content="{x:Bind zz21_n1,Mode=OneWay}" Click="zz21_Click" Grid.Column="1"  Margin="5" />
                        <TextBlock Visibility="{x:Bind zz21_HasP,Mode=OneWay}" Grid.Column="2" Margin="5" VerticalAlignment="Center" Text="{x:Bind txt(84)}" />
                        <NumberBox Visibility="{x:Bind zz21_HasP,Mode=OneWay}" x:Name="zb21" Grid.Column="3" HorizontalAlignment="Stretch" Margin="5" PlaceholderText="{x:Bind txt(84)}" Value="{x:Bind zz21_p,Mode=TwoWay}" Minimum="0" Maximum="100" SpinButtonPlacementMode="Inline" />
                    </Grid>
                    <local:DGDataGrid x:Name="zz21_gr" Grid.Row="2" Grid.Column="0" ItemsSource="{x:Bind zz21_is,Mode=OneWay}" ColumnHeaders="{x:Bind zz21_ch,Mode=OneWay}" />
                </Grid>
            </Grid>



        </Grid>

        <!-- Class -->
        <Grid Visibility="{x:Bind WhatX(2);,Mode=OneWay}" x:Name="TC_SingleClass" Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{x:Bind Resizer_VV1,Mode=OneWay}" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <ListView x:Name="Classes_ListView" Grid.Row="0" Grid.Column="0" ItemsSource="{x:Bind Classes_List,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" SelectionChanged="ClassChanged" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Item">
                        <StackPanel Orientation="Horizontal" Margin="10" >
                            <SymbolIcon Symbol="Page2" />
                            <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <local:Resizer Grid.Column="1" Margin="10" Grid.RowSpan="2"  Width="1" Minimum="-1000"   Maximum="1000" Orientation="Vertical"   Value="{x:Bind Resizer_V1,Mode=TwoWay}"/>

        </Grid>

        <!-- Subject -->
        <Grid Visibility="{x:Bind WhatX(4);,Mode=OneWay}" x:Name="TC_SingleSubject" Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{x:Bind Resizer_VV1,Mode=OneWay}" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <ListView x:Name="Subjects_ListView" Grid.Row="0" Grid.Column="0" ItemsSource="{x:Bind Subjects_List,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" SelectionChanged="SubjectChanged" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Item">
                        <StackPanel Orientation="Horizontal" Margin="10" >
                            <SymbolIcon Symbol="Page2" />
                            <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <local:Resizer Grid.Column="1" Margin="10" Grid.RowSpan="2"  Width="1" Minimum="-1000"   Maximum="1000" Orientation="Vertical"   Value="{x:Bind Resizer_V1,Mode=TwoWay}"/>
            <!-- Subject Generic -->
            <Grid Grid.Column="2" Margin="5" Grid.Row="0" Visibility="{x:Bind WhatY(2);,Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Column="2" Margin="5" Grid.Row="0" Visibility="{x:Bind WhatY(2);,Mode=OneWay}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <InfoBar Grid.Row="0" IsOpen="True" Message="{x:Bind zz21_n2,Mode=OneWay}" Severity="Warning"  IsClosable="False">
                    </InfoBar>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" IsChecked="{x:Bind zz21_A,Mode=TwoWay}" Content="{x:Bind txt(95)}"></CheckBox>
                        <DropDownButton Visibility="{x:Bind zz21_HasM,Mode=OneWay}" x:Name="zz24_dd" Content="{x:Bind zz21_n1,Mode=OneWay}" Click="zz21_Click" Grid.Column="1"  Margin="5" />
                        <TextBlock Visibility="{x:Bind zz21_HasP,Mode=OneWay}" Grid.Column="2" Margin="5" VerticalAlignment="Center" Text="{x:Bind txt(84)}" />
                        <NumberBox Visibility="{x:Bind zz21_HasP,Mode=OneWay}" x:Name="zb24" Grid.Column="3" HorizontalAlignment="Stretch" Margin="5" PlaceholderText="{x:Bind txt(84)}" Value="{x:Bind zz21_p,Mode=TwoWay}" Minimum="0" Maximum="100" SpinButtonPlacementMode="Inline" />
                    </Grid>
                    <local:DGDataGrid x:Name="zz24_gr" Grid.Row="2" Grid.Column="0" ItemsSource="{x:Bind zz21_is,Mode=OneWay}" ColumnHeaders="{x:Bind zz21_ch,Mode=OneWay}" />
                    <ListView x:Name="Rooms_ListView" Grid.Row="2" Grid.Column="0" ItemsSource="{x:Bind Rooms_List,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" SelectionChanged="RoomChanged" SelectionMode="Multiple">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:Item">
                                <StackPanel Orientation="Horizontal" Margin="10" >
                                    <SymbolIcon Symbol="Page2" />
                                    <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </Grid>
            </Grid>




        </Grid>



    </Grid>
</Page>

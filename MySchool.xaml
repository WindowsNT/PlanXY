<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WuiFET.MySchool"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WuiFET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TeachingTip
            x:Name="tt"
            Title="{x:Bind str1,Mode=OneWay}"
            Subtitle="{x:Bind str2,Mode=OneWay}">
            <TeachingTip.IconSource>
                <SymbolIconSource Symbol="Accept" />
            </TeachingTip.IconSource>
        </TeachingTip>


        
        <InfoBar x:Name="infoBar" Grid.Row="0" IsOpen="True"  Severity="Success"  IsClosable="False" Message="Απευθείας εισαγωγή δεδομένων από MySchool.sch.gr για τα Ελληνικά Σχολεία">
        </InfoBar>


        <StackPanel Grid.Row="1">
            <ComboBox SelectedIndex="{x:Bind sidx,Mode=TwoWay}" MinWidth="300" Margin="15">
                <ComboBoxItem>Παρακαλώ επιλέξτε</ComboBoxItem>
                <ComboBoxItem>Απλή εισαγωγή δεδομένων</ComboBoxItem>
                <ComboBoxItem>Εισαγωγή δεδομένων και δημιουργία Activities ανά τύπο σχολείου</ComboBoxItem>
            </ComboBox>
           
        </StackPanel>

        <InfoBar Grid.Row="2" IsOpen="True" Severity="Warning" Visibility="{x:Bind IsMode1Or2,Mode=OneWay}">
            <InfoBar.Content>
                <StackPanel Orientation="Vertical" Margin="10">
                    <TextBlock FontWeight="Bold" TextWrapping="Wrap" >Για την εισαγωγή εκπαιδευτικών</TextBlock>
                    <TextBlock TextWrapping="Wrap" >MySchool -> Προσωπικό -> Εργαζόμενοι στο Φορέα μου -> Βγάλτε το 'Όσοι Απουσιάζουν' -> Αναζήτηση -> Εξαγωγή -> Άνοιγμα με Excel -> Αποθήκευση ως UTF-8 CSV.</TextBlock>
                    <TextBlock> </TextBlock>
                    <TextBlock FontWeight="Bold" TextWrapping="Wrap" >Για την εισαγωγή τάξεων, μαθημάτων, μαθητών και γονέων</TextBlock>
                    <TextBlock TextWrapping="Wrap" >Μαθητές -> Άλλες λειτουργίες -> Μαζική εξαγωγή στοιχείων σχολείου σε XML -> Επιλογή όλων των τάξεων -> Αποθήκευση XML.</TextBlock>
                    <TextBlock></TextBlock>
                    <TextBlock FontWeight="Bold" TextWrapping="Wrap" >Για την εισαγωγή αναθέσεων</TextBlock>
                    <TextBlock TextWrapping="Wrap" >Αναφορές -> Αναφορές Εργαζομένων -> Στατιστικά Στοιχεία -> Αναθέσεις Εκπαιδευτικών Μονάδας -> Προεπισκόπηση -> Αποθήκευση ως XLS (όχι XLSX) -> Άνοιγμα με Excel -> Αποθήκευση ως UTF-8 CSV.</TextBlock>
                    <TextBlock></TextBlock>
                </StackPanel>
            </InfoBar.Content>
        </InfoBar>


        <StackPanel Grid.Row="3" Margin="15" Orientation="Horizontal" Visibility="{x:Bind IsMode1Or2,Mode=OneWay}">
            <Button Margin="5" Click="OnTeachers_ImportMySchool" Content="Εισαγωγή Εκπαιδευτικών"  />
            <Button Margin="5" Click="OnSubjects_ImportMySchool" Content="Εισαγωγή Μαθημάτων, Τμημάτων, Μαθητών και Γονέων"  />
<!--            <Button Margin="5" Click="OnYears_ImportMySchool" Content="Εισαγωγή Τμημάτων"  />
            <Button Margin="5" Click="OnKids_ImportMySchool" Content="Εισαγωγή Μαθητών και Γονέων"  />
            -->
            <Button Margin="5" Click="OnAssignments_ImportMySchool" Content="Εισαγωγή Αναθέσεων" Visibility="{x:Bind IsMode1Or2,Mode=OneWay}" />
        </StackPanel>

        <InfoBar  Grid.Row="4" IsOpen="True"  Severity="Error"  IsClosable="False" Message="Το χαρακτηριστικό ακόμα είναι υπό κατασκευη. Τα activities που φτιάχνονται είναι τα γενικής παιδείας Γυμνασίου, ΓΕΛ, ΕΠΑΛ και οι Προσανατολισμοί Β και Γ λυκείου." Visibility="{x:Bind IsMode2,Mode=OneWay}">
        </InfoBar>

        <StackPanel Grid.Row="5" Margin="15" Orientation="Horizontal" Visibility="{x:Bind CanSendOrGenerate,Mode=OneWay}">
            <Button Style="{StaticResource SuccessButtonStyle}" VerticalAlignment="Top" Margin="15" Content="Εισαγωγή Δεδομένων" Visibility="{x:Bind IsMode2,Mode=OneWay}" Click="ImportDB"></Button>
            <Button Style="{StaticResource PrimaryButtonStyle}" VerticalAlignment="Top" Margin="15" Content="Αποστολή Ανωνυμοποιημένων Δεδομένων" Visibility="{x:Bind IsMode1Or2,Mode=OneWay}" Click="SendADB"></Button>
        </StackPanel>
 

    </Grid>
</Page>

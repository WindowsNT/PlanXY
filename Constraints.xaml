<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WuiFET.Constraints"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WuiFET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Info Bar-->
            <RowDefinition Height="Auto"/> <!-- Menu + Only Entries chebox -->
            <RowDefinition Height="*"/>     <!-- Data -->
        </Grid.RowDefinitions>

        <!-- Info Bar-->
        <InfoBar x:Name="infoBar" Grid.Row="0" IsOpen="True" Message="" Severity="Warning"  IsClosable="False">
            <Grid VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Bind str1,Mode=OneWay}" Margin="10,0,0,0" Grid.Column="0" VerticalAlignment="Center"/>
            </Grid>
        </InfoBar>

        <!-- Menu -->
        <Grid  Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Menu for TS -->
            <MenuBar HorizontalAlignment="Left"  Visibility="{x:Bind IsTS,Mode=OneWay}">
                <MenuBarItem Title="{x:Bind txt(31)}" > <!-- Teacher -->
                    <MenuFlyoutItem Text="{x:Bind txt(77)}" Click="TS_Teacher_NotAvailableTimes"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutSubItem Text="{x:Bind txt(100);}"> <!-- Day Limits -->
                        <MenuFlyoutItem Text="{x:Bind txt(96)}" Click="TS_Teacher_MaxGapsDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(104)}" Click="TS_Teacher_MinHoursDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(99)}" Click="TS_Teacher_MaxHoursDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(102)}" Click="TS_Teacher_MaxSpanDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(105)}" Click="TS_Teacher_MaxContinuousHours"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="{x:Bind txt(101);}"> <!-- Week Limits -->
                        <MenuFlyoutItem Text="{x:Bind txt(93)}" Click="TS_Teacher_MinDaysWeek"/>
                        <MenuFlyoutItem Text="{x:Bind txt(94)}" Click="TS_Teacher_MaxDaysWeek"/>
                        <MenuFlyoutItem Text="{x:Bind txt(97)}" Click="TS_Teacher_MaxGapsWeek"/>
                        <MenuFlyoutItem Text="{x:Bind txt(162)}" Click="TS_Teacher_NoTwoDays"/>
                    </MenuFlyoutSubItem>
                </MenuBarItem>
                <MenuBarItem Title="{x:Bind txt(24)}" > <!-- Teachers -->
                    <MenuFlyoutSubItem Text="{x:Bind txt(100);}"> <!-- Day Limits -->
                        <MenuFlyoutItem Text="{x:Bind txt(96)}" Click="TS_Teachers_MaxGapsDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(104)}" Click="TS_Teachers_MinHoursDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(99)}" Click="TS_Teachers_MaxHoursDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(102)}" Click="TS_Teachers_MaxSpanDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(105)}" Click="TS_Teachers_MaxContinuousHours"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="{x:Bind txt(101);}"> <!-- Week Limits -->
                        <MenuFlyoutItem Text="{x:Bind txt(93)}" Click="TS_Teachers_MinDaysWeek"/>
                        <MenuFlyoutItem Text="{x:Bind txt(94)}" Click="TS_Teachers_MaxDaysWeek"/>
                        <MenuFlyoutItem Text="{x:Bind txt(97)}" Click="TS_Teachers_MaxGapsWeek"/>
                    </MenuFlyoutSubItem>
                </MenuBarItem>

                <MenuBarItem Title="{x:Bind txt(92)}" > <!-- Class -->
                    <MenuFlyoutItem Text="{x:Bind txt(77)}" Click="TS_Class_NotAvailableTimes"/>
                </MenuBarItem>

                <MenuBarItem Title="{x:Bind txt(32)}" > <!-- Activity -->
                    <MenuFlyoutItem Text="{x:Bind txt(186)}" Click="TS_Activity_PreferredStartingTimes"/>
                    <MenuFlyoutItem Text="{x:Bind txt(168)}" Click="TS_Activity_PreferredTimeSlots"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutSubItem Text="{x:Bind txt(57);}">
                        <MenuFlyoutItem Text="{x:Bind txt(177)}" Click="TS_Activities_MinDaysBetween"/>
                        <MenuFlyoutItem Text="{x:Bind txt(203)}" Click="TS_Activities_MaxDaysBetween"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="{x:Bind txt(205);}">
                        <MenuFlyoutItem Text="{x:Bind txt(92)}" Click="TS_Activity_BeginClassDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(31)}" Click="TS_Activity_BeginTeacherDay"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="{x:Bind txt(206);}">
                        <MenuFlyoutItem Text="{x:Bind txt(92)}" Click="TS_Activity_EndClassDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(31)}" Click="TS_Activity_EndTeacherDay"/>
                    </MenuFlyoutSubItem>
                </MenuBarItem>

                <MenuBarItem Title="{x:Bind txt(25)}" >
                    <!-- Activities -->
                    <MenuFlyoutItem Text="{x:Bind txt(186)}" Click="TS_Activities_PreferredStartingTimes"/>
                    <MenuFlyoutItem Text="{x:Bind txt(168)}" Click="TS_Activities_PreferredTimeSlots"/>
                </MenuBarItem>

            </MenuBar>

            <!-- Menu for SS -->
            <MenuBar HorizontalAlignment="Left"  Visibility="{x:Bind IsSS,Mode=OneWay}">
                <MenuBarItem Title="{x:Bind txt(31)}" > <!-- Teacher -->
                    <MenuFlyoutItem Text="{x:Bind txt(146)}" Click="SS_Teacher_PreferredRooms"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutSubItem Text="{x:Bind txt(100);}">
                        <MenuFlyoutItem Text="{x:Bind txt(139)}" Click="SS_Teacher_MaxRoomChangesDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(140)}" Click="SS_Teacher_MaxRoomChangesDayInterval"/>
                        <MenuFlyoutItem Text="{x:Bind txt(143)}" Click="SS_Teacher_MaxBuildingChangesDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(144)}" Click="SS_Teacher_MaxBuildingChangesDayInterval"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="{x:Bind txt(101);}">
                        <MenuFlyoutItem Text="{x:Bind txt(139)}" Click="SS_Teacher_MaxRoomChangesWeek"/>
                        <MenuFlyoutItem Text="{x:Bind txt(143)}" Click="SS_Teacher_MaxBuildingChangesWeek"/>
                    </MenuFlyoutSubItem>
                </MenuBarItem>
                <MenuBarItem Title="{x:Bind txt(24)}" >
                    <!-- Teachers -->
                    <MenuFlyoutSubItem Text="{x:Bind txt(100);}">
                        <MenuFlyoutItem Text="{x:Bind txt(139)}" Click="SS_Teachers_MaxRoomChangesDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(140)}" Click="SS_Teachers_MaxRoomChangesDayInterval"/>
                        <MenuFlyoutItem Text="{x:Bind txt(143)}" Click="SS_Teachers_MaxBuildingChangesDay"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="{x:Bind txt(101);}">
                        <MenuFlyoutItem Text="{x:Bind txt(139)}" Click="SS_Teachers_MaxRoomChangesWeek"/>
                        <MenuFlyoutItem Text="{x:Bind txt(140)}" Click="SS_Teachers_MaxRoomChangesWeekInterval"/>
                        <MenuFlyoutItem Text="{x:Bind txt(143)}" Click="SS_Teachers_MaxBuildingChangesWeek"/>
                    </MenuFlyoutSubItem>
                </MenuBarItem>
                <MenuBarItem Title="{x:Bind txt(92)}" >                     <!-- Class -->
                    <MenuFlyoutItem Text="{x:Bind txt(146)}" Click="SS_Class_PreferredRooms"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutSubItem Text="{x:Bind txt(100);}">
                        <MenuFlyoutItem Text="{x:Bind txt(139)}" Click="SS_Class_MaxRoomChangesDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(140)}" Click="SS_Class_MaxRoomChangesDayInterval"/>
                        <MenuFlyoutItem Text="{x:Bind txt(143)}" Click="SS_Class_MaxBuildingChangesDay"/>
                        <MenuFlyoutItem Text="{x:Bind txt(144)}" Click="SS_Class_MaxBuildingChangesDayInterval"/>
                    </MenuFlyoutSubItem>
                </MenuBarItem>
                <MenuBarItem Title="{x:Bind txt(52)}" >
                    <!-- Room -->
                    <MenuFlyoutItem Text="{x:Bind txt(77)}" Click="SS_Room_NotAvailableTimes"/>
                </MenuBarItem>
                <MenuBarItem Title="{x:Bind txt(33)}" >
                    <!-- Lesson -->
                    <MenuFlyoutItem Text="{x:Bind txt(146)}" Click="SS_Lesson_PreferredRooms"/>
                </MenuBarItem>
                <MenuBarItem Title="{x:Bind txt(32)}" >
                    <!-- Activity -->
                    <MenuFlyoutItem Text="{x:Bind txt(146)}" Click="SS_Activity_PreferredRooms"/>
                </MenuBarItem>
                <MenuBarItem Title="{x:Bind txt(36)}" >
                    <!-- Tag -->
                    <MenuFlyoutItem Text="{x:Bind txt(146)}" Click="SS_Tag_PreferredRooms"/>
                </MenuBarItem>
            </MenuBar>


            <!-- Menu for OF -->
            <MenuBar HorizontalAlignment="Left"  Visibility="{x:Bind IsES,Mode=OneWay}">
                <MenuBarItem Title="{x:Bind txt(92)}" >
                    <!-- Class -->
                    <MenuFlyoutItem Text="{x:Bind txt(188)}" Click="ES_Class_Combinations"/>
                </MenuBarItem>
            </MenuBar>


            <!-- Existing Entries DropDown -->
            <DropDownButton Grid.Column="1" HorizontalAlignment="Right" Visibility="{x:Bind IsExistingExtriesVisible,Mode=OneWay}" x:Name="bb1_dd" Content="{x:Bind str4,Mode=OneWay}" Click="bb1_Click" Margin="5" />


            <!-- Checkbox -->
            <CheckBox Content="{x:Bind txt(181)}" Margin="15,0,5,0" Grid.Column="2" HorizontalAlignment="Right" IsChecked="{x:Bind OnlyShowEntries,Mode=TwoWay}" />

        </Grid>

        <!-- Data-->
        <Grid x:Name="C_Left" Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{x:Bind Resizer_VV1,Mode=OneWay}" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Left -->
            <Grid x:Name="C1_Left" Grid.Row="0" Grid.Column="0" Visibility="{x:Bind IsLeftVisible,Mode=OneWay}" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!-- Selector Bar-->
                <SelectorBar  Margin="5"  x:Name="Left_SB" Grid.Row="0" SelectionChanged="SB_Left" Visibility="{x:Bind IsLeftSBVisible,Mode=OneWay}"  >
                </SelectorBar>

                <!-- AutoSuggestBox -->
                <AutoSuggestBox Grid.Row="1" x:Name="fb11" QueryIcon="Find" PlaceholderText="{x:Bind txt(130)}"  VerticalAlignment="Center" HorizontalAlignment="Stretch" MinWidth="150" TextChanged="OnLeftFilter" />

                <!-- Generic Left ListView -->
                <ListView  x:Name="Left_ListView" Grid.Row="2" ItemsSource="{x:Bind Left_List,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" SelectionChanged="LeftChanged" SelectionMode="{x:Bind leftsm,Mode=OneWay}" ContainerContentChanging="GenericContentChanging">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Item">
                            <StackPanel Orientation="Horizontal" Margin="10" >
                                <SymbolIcon Symbol="Page2" />
                                <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>


            </Grid>

            <!-- Resizer -->
            <local:Resizer Visibility="{x:Bind IsLeftVisible,Mode=OneWay}"  Grid.Column="1" Margin="10" Grid.RowSpan="2"  Width="1" Minimum="-1000"   Maximum="1000" Orientation="Vertical"   Value="{x:Bind Resizer_V1,Mode=TwoWay}"/>

            <!-- Right -->
            <Grid Grid.Column="2" Margin="5" Grid.Row="0" Visibility="{x:Bind IsRightVisible,Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- Title -->
                    <RowDefinition Height="Auto" /> <!-- Active, Percentage, Multiple Selector -->
                    <RowDefinition Height="Auto" /> <!-- Selector Bar -->
                    <RowDefinition Height="*" /> <!-- Data -->
                </Grid.RowDefinitions>

                <!-- Title -->
                <InfoBar Grid.Row="0" IsOpen="True" Message="{x:Bind str2,Mode=OneWay}" Severity="Warning"  IsClosable="False"/>

                <!-- Active CB and Multi Drop Down -->
                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <DropDownButton Visibility="{x:Bind IsMultiple,Mode=OneWay}" x:Name="zz1_dd" Content="{x:Bind str3,Mode=OneWay}" Click="zz1_Click" Margin="5" />
                    <CheckBox Visibility="{x:Bind IsActiveVisible,Mode=OneWay}" IsChecked="{x:Bind IsActiveChecked,Mode=TwoWay}" Content="{x:Bind txt(95)}" Margin="5"></CheckBox>
                    <TextBlock  Visibility="{x:Bind IsPercentageVisible,Mode=OneWay}" Text="{x:Bind txt(84)}" VerticalAlignment="Center" Margin="5"/>
                    <NumberBox  Visibility="{x:Bind IsPercentageVisible,Mode=OneWay}"  x:Name="z1_p" HorizontalAlignment="Stretch" Margin="5" PlaceholderText="{x:Bind txt(84)}" Value="{x:Bind Percentage,Mode=TwoWay}" Minimum="0" Maximum="100" SpinButtonPlacementMode="Inline" />
                </StackPanel>

                <!-- Selector Bar-->
                <SelectorBar x:Name="Right_SB" Grid.Row="2" SelectionChanged="SB_Right" Visibility="{x:Bind IsRightSBVisible,Mode=OneWay}" />

                <!-- Generic Data ListView -->
                <local:DGDataGrid LayoutUpdated="gr1_ly" Visibility="{x:Bind IsGridRightVisible,Mode=OneWay}" x:Name="zz1_gr" Grid.Row="3" Grid.Column="0" ItemsSource="{x:Bind zz1_is,Mode=OneWay}" ColumnHeaders="{x:Bind zz1_ch,Mode=OneWay}" />

                <!-- Generic Right ListView -->
                <Grid x:Name="C1_Right" Visibility="{x:Bind IsListRightVisible,Mode=OneWay}" Grid.Row="3" Grid.Column="0"  >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <AutoSuggestBox x:Name="fb11r" QueryIcon="Find" PlaceholderText="{x:Bind txt(130)}"  Margin="4" Grid.Column="2" VerticalAlignment="Center" MinWidth="150" TextChanged="OnRightFilter" />
                    <ListView    x:Name="Right_ListView" Grid.Row="1" ItemsSource="{x:Bind Right_List,Mode=OneWay}" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" SelectionChanged="RightChanged" SelectionMode="{x:Bind rightsm,Mode=OneWay}" ContainerContentChanging="GenericContentChanging">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:Item">
                                <StackPanel Orientation="Horizontal" Margin="10" >
                                    <SymbolIcon Symbol="Page2" />
                                    <TextBlock Text="{x:Bind Name1,Mode=OneWay}" Margin="10,0,0,0">
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>


            </Grid>

        </Grid>

    </Grid>
</Page>
